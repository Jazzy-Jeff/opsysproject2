#include <string>
using namespace std;

class Process{
 public:
  Process();
  Process(string id1, int size1, int arrivalTime1, int burstTime1);

  //Accessors
  string getId() const;
  int getSize() const;
  int getArrivalTime() const;
  int getBurstTime() const;
  int getRemainingBurstTime() const;
  
  //Modifiers
  void setBlockedUntil(int b);
  void decreaseBursts();
  void setRemainingBurstTime(int b);

 private:
  string id;
  int size;
  int arrivalTime;
  int burstTime;
  int remainingBurstTime;
};
